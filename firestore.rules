rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ─────────────────────────────
       HELPERS
    ───────────────────────────── */
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /* ─────────────────────────────
       USER PROFILES
       /userProfiles/{userId}
    ───────────────────────────── */
    match /userProfiles/{userId} {
      allow get, list, create, update: if isOwner(userId);
      allow delete: if false; // Profiles shouldn't be deleted by users
    }

    /* ─────────────────────────────
       USER DATA COLLECTIONS
       /users/{userId}/...
    ───────────────────────────── */

    // Granular rules for each user-specific collection.
    // This ensures that a user can only access their own data,
    // and provides clear, maintainable rules for each data type.

    match /users/{userId}/assets/{docId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/bills/{docId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/budgets/{docId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/expenses/{docId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/incomeStreams/{docId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/liabilities/{docId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/netWorths/{docId} {
      allow read, write: if isOwner(userId);
    }

    match /users/{userId}/savingsGoals/{docId} {
      allow read, write: if isOwner(userId);
    }
  }
}
