rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ─────────────────────────────
       HELPERS
    ───────────────────────────── */
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /* ─────────────────────────────
       USER PROFILES
       /userProfiles/{userId}
    ───────────────────────────── */
    match /userProfiles/{userId} {
      allow get, list, create, update: if isOwner(userId);
      allow delete: if false; // Profiles shouldn't be deleted by users
    }

    /* ─────────────────────────────
       USER DATA
       /users/{userId}
    ───────────────────────────── */
    match /users/{userId} {
      // This rule allows a user to read their own top-level user document.
      // It does not grant access to the subcollections below.
      allow get: if isOwner(userId);

      // --- USER SUBCOLLECTIONS ---
      // These rules grant access to the documents within each subcollection.
      // A user can only access the subcollections under their own user ID.
      
      match /assets/{docId} {
        allow read, write: if isOwner(userId);
      }

      match /bills/{docId} {
        allow read, write: if isOwner(userId);
      }

      match /budgets/{docId} {
        allow read, write: if isOwner(userId);
      }

      match /expenses/{docId} {
        allow read, write: if isOwner(userId);
      }

      match /incomeStreams/{docId} {
        allow read, write: if isOwner(userId);
      }

      match /liabilities/{docId} {
        allow read, write: if isOwner(userId);
      }

      match /netWorths/{docId} {
        allow read, write: if isOwner(userId);
      }

      match /savingsGoals/{docId} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}
