rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ─────────────────────────────
       USER PROFILES
       /userProfiles/{userId}
    ───────────────────────────── */
    match /userProfiles/{userId} {
      allow get, create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Profiles shouldn't be deleted by users
    }

    /* ─────────────────────────────
       USER DATA
       /users/{userId}
    ───────────────────────────── */
    match /users/{userId} {
      // This rule allows a user to read their own top-level user document.
      // It does not grant access to the subcollections below.
      allow get: if request.auth != null && request.auth.uid == userId;

      // --- USER SUBCOLLECTIONS ---
      // Rules for subcollections must be nested to correctly check ownership.
      
      match /assets/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /bills/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /budgets/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /expenses/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /incomeStreams/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /liabilities/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /netWorths/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /savingsGoals/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
