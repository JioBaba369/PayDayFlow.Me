rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ─────────────────────────────
       USER PROFILES
       /userProfiles/{userId}
    ───────────────────────────── */
    match /userProfiles/{userId} {
      allow read, create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    /* ─────────────────────────────
       USER DATA
       /users/{userId}
    ───────────────────────────── */
    match /users/{userId} {
      // Allow user to read/write their own document if it ever exists.
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // --- USER SUBCOLLECTIONS ---
      // Rules for subcollections must be nested to correctly check ownership.
      match /assets/{docId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      match /bills/{docId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      match /budgets/{docId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      match /expenses/{docId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      match /incomeStreams/{docId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      match /liabilities/{docId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      match /netWorths/{docId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      match /savingsGoals/{docId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
